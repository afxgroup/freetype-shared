#include ../Makefile.amiga.common

# Uncomment the next line if you are cross compiling
CROSS_COMPILE = ppc-amigaos-
CC     = $(CROSS_COMPILE)gcc
STRIP  = $(CROSS_COMPILE)strip
CXX    = $(CROSS_COMPILE)c++ 
AS     = $(CROSS_COMPILE)as 
AR     = $(CROSS_COMPILE)ar
LD     = $(CROSS_COMPILE)ld 
RANLIB = $(CROSS_COMPILE)ranlib 
RM     = rm -Rf

# Change these as required
OPTIMIZE = -O2 -Wfatal-errors
DEBUG    = -gstabs # -DDEBUG
CFLAGS   = -I. -Iinclude -I../include -Wall $(AMIGA_CFLAGS) $(OPTIMIZE) $(DEBUG)

# Flags passed to gcc during linking
LINK = -gstabs -Wl,--no-undefined

# Name of the "thing" to build
TARGET = freetype.library

# Additional linker libraries
LIBS = -L../objs/.libs -lfreetype -lpng -lz -lpthread

# Version of the library to build
VERSION = 54

# -------------------------------------------------------------
# Nothing should need changing below this line

SRCS = init.c stubs.c
OBJS = $(SRCS:.c=.o)

LINKOBJS = autoinit_freetype_base.o autoinit_freetype_main.o libstubs.o

all: checklib libfreetype.a $(TARGET)

# Rules for building
$(TARGET): $(OBJS)
	$(CC) $(LINK) -nostartfiles -o $@.debug $(OBJS) $(LIBS) -Wl,-L.,--cref,-M,-Map=$@.debug.map
	$(STRIP) -R.comment $@.debug -o $@

libfreetype.a: $(LINKOBJS)
	$(AR) rcs $@ $(LINKOBJS)

checklib:
ifeq (,$(wildcard ../objs/.libs/libfreetype.a))
	$(error Please compile libfreetype first!)
endif

.PHONY: clean
clean:
	$(RM) $(TARGET) *.debug* $(OBJS) $(LINKOBJS) libfreetype.a

.PHONY: revision
revision:
	bumprev $(VERSION) $(TARGET)